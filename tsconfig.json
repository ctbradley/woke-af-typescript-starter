{
    "compilerOptions": {
        "target": "es5",
        "module": "esnext",
        "strict": true,
        "sourceMap": true,
        "noImplicitAny": true,
        "removeComments": true,
        "moduleResolution": "node",
        "experimentalDecorators": true,
        "esModuleInterop": true,
        "outDir": "./dist",
        "baseUrl": "./",
        "paths": {
            "@/*": ["./src/*"]
        },
        "lib": ["esnext", "dom"]
    },
    "include": ["src"],
    "exclude": ["node_modules", "dist"]
}
